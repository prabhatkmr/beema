{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "target/**",
        "dist/**",
        "build/**",
        ".next/**",
        "!.next/cache/**"
      ],
      "env": [
        "SPRING_PROFILES_ACTIVE",
        "DATABASE_URL",
        "TEMPORAL_ENDPOINT",
        "NEXT_PUBLIC_API_URL"
      ]
    },
    "test": {
      "dependsOn": [
        "build"
      ],
      "outputs": [
        "coverage/**",
        "target/surefire-reports/**"
      ],
      "cache": false,
      "env": [
        "SPRING_PROFILES_ACTIVE",
        "TEST_DATABASE_URL"
      ]
    },
    "lint": {
      "outputs": [],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "SPRING_PROFILES_ACTIVE",
        "DATABASE_URL",
        "TEMPORAL_ENDPOINT",
        "PORT"
      ]
    },
    "clean": {
      "cache": false
    },
    "format": {
      "outputs": [],
      "cache": false
    },
    "type-check": {
      "outputs": []
    },
    "deploy": {
      "dependsOn": [
        "build",
        "test",
        "lint"
      ],
      "outputs": [],
      "cache": false,
      "env": [
        "DOCKER_REGISTRY",
        "K8S_NAMESPACE",
        "HELM_RELEASE_NAME"
      ]
    }
  }
}
